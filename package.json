  "private": true,
  "dependencies": {
    "@ffmpeg/ffmpeg": "^0.9.7",
    "@heroicons/react": "^2.0.13",
    "@tailwindcss/forms": "^0.5.3",
    "exif-auto-rotate": "^0.2.0",
    "file-saver": "^2.0.5",
    "jszip": "^3.6.0",
    "pdf-lib": "^1.16.0",
    "pdfjs-dist": "^2.6.347",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^11.3.1",
    "react-hooks-svgdrawing": "^2.1.2",
